<section class="relative">
  <div class="container px-4 mx-auto">
    <div class="max-w-3xl mb-20 mx-auto text-center">
      <h2 class="mt-8 mb-10 text-4xl font-semibold font-heading">Popular Products</h2>
    </div>
    <div class="flex flex-wrap -m-3 mb-16">
      <%= render partial:'product', collection:@products %>
    </div>
    <div class="text-center">
      <% if @products.next_page.present? %>
        <%= link_to "View more products", products_path(page:@products.next_page), class:"mb-4 px-6 py-4 text-sm text-white font-semibold bg-red-400 hover:bg-red-100 rounded-xl" %>
      <% end %>
    </div>
  </div>
</section>
