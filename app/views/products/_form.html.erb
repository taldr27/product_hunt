<%= form_with model:@product do |form| %>

  <div class="mb-4">
    <%= form.text_field :name, placeholder:"Product Name", class:"appearance-none block w-full py-3 px-4 text-gray-700 bg-gray-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none" %>
  </div>

  <div class="mb-4">
    <%= form.text_area :description, placeholder:"Product Description", class:"appearance-none block w-full py-3 px-4 text-gray-700 bg-gray-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none" %>
  </div>

  <div class="mb-4">
    <%= form.label "Visible" %>
    <%= form.check_box :visible %>
  </div>

  <div class="mb-4">
    <%= form.submit "Save Product", class:"cursor-pointer appearance-none block w-full py-3 px-4 text-gray-700 bg-gray-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none" %>
  </div>

<% end %>